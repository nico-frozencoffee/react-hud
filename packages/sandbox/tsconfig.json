{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "jsx": "react"
  },
  "include": ["./src/*"],
  "exclude": ["node_modules"]
}
