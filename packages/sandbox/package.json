{
  "name": "@coffee-maker/sandbox",
  "version": "0.0.1",
  "description": "Sandbox application for @coffee-maker/hud",
  "author": "stdout-reach <nico.greco@outreach.io>",
  "homepage": "",
  "license": "Apache-2.0",
  "main": "src/index.js",
  "directories": {
    "src": "src",
    "test": "__tests__"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-nico-frozencoffee:nico-frozencoffee/react-hud.git"
  },
  "scripts": {
    "build:release": "esbuild src/index.jsx --bundle --minify --outfile=dist/app.min.js --define:process.env.NODE_ENV=\\\"production\\\"",
    "build:debug": "esbuild src/index.jsx --bundle --sourcemap=external --outfile=dist/app.js --define:process.env.NODE_ENV=\\\"development\\\"",
    "test": "echo \"Error: run tests from root\" && exit 1",
    "copy": "cp src/index.html dist/index.html",
    "serve": "copy; esbuild src/index.jsx --bundle --sourcemap=external --outfile=dist/app.js --define:process.env.NODE_ENV=\\\"development\\\" --servedir=dist --serve=8080"
  },
  "dependencies": {
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typescript": "^4.2.3"
  }
}
