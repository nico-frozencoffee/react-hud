{
  "compilerOptions": {
    "baseUrl": "./lib",
    "rootDir": "./lib",
    "target": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "jsx": "react",
    "types": [],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./lib/*"],
  "exclude": ["node_modules"]
}
